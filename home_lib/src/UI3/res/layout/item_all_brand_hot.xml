<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_190"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/tv_item_all_brand_hot_tupian"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_item_all_brand_hot_biaoti"
            android:layout_width="@dimen/dp_110"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/c_3C3C38"
            android:textSize="@dimen/sp_14"
            />

        <LinearLayout
            android:id="@+id/ll_all_product_brand_quan_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_5"
            >

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item_all_brand_quan_left"
                android:gravity="center"
                android:text="券"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                />-->

            <TextView
                android:id="@+id/tv_item_all_brand_hot_quan"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_14"
                android:background="@drawable/bg_home_hot_item1"
                android:gravity="center"
                android:text="¥0.0  "
                android:textColor="@color/c_FE3F47"
                android:textSize="@dimen/sp_10"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/c_FE3F47"
                android:textSize="@dimen/sp_10"
                />

            <TextView
                android:id="@+id/tv_item_all_brand_hot_quanhoujia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0  "
                android:textColor="@color/c_FE3F47"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:background="#DADADA"
        />

</LinearLayout>


