<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_0"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="@dimen/dp_244"
            android:layout_height="@dimen/dp_244"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/iv_sign_pay_tips_close"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_15"
                android:src="@drawable/ic_sign_pay_tips_close"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="支付"
                android:textColor="@color/c_2F2F2F"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_69"
                android:layout_toLeftOf="@+id/iv_sign_pay_tips_pay_money"
                android:text="¥"
                android:textColor="@color/c_2F2F2F"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/iv_sign_pay_tips_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_60"
                android:text="xx"
                android:textColor="@color/c_2F2F2F"
                android:textSize="@dimen/sp_36"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@color/c_EEEEEE"
                />


            <ImageView
                android:id="@+id/iv_sign_pay_tips"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_above="@+id/tv_sign_pay_tips_sure_pay"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_13"
                android:src="@drawable/ic_sign_tmm"
                />

            <TextView
                android:id="@+id/tv_sign_pay_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_sign_pay_tips_sure_pay"
                android:layout_marginBottom="@dimen/dp_26"
                android:layout_marginLeft="@dimen/sp_8"
                android:layout_toRightOf="@+id/iv_sign_pay_tips"
                android:text="淘觅觅可用余额"
                android:textColor="#6E726E"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                android:id="@+id/tv_sign_pay_tips_ye_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_sign_pay_tips_sure_pay"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_13"
                android:text="¥ xx"
                android:textColor="#6E726E"
                android:textSize="@dimen/sp_14"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_above="@+id/tv_sign_pay_tips_sure_pay"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/c_EEEEEE"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_above="@+id/tv_sign_pay_tips_sure_pay"
                android:layout_marginBottom="@dimen/dp_55"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/c_EEEEEE"
                />

            <TextView
                android:id="@+id/tv_sign_pay_tips_sure_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@drawable/bg_signin_pay_ture"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>