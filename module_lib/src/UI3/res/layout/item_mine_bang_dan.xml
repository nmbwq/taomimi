<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/dp_54"
	android:paddingLeft="@dimen/dp_15"
	android:paddingRight="@dimen/dp_15"
	android:paddingTop="@dimen/dp_8">

	<TextView
		android:id="@+id/tv_item_mine_dang_dan_paiming"
		android:textColor="@color/c_2F2F2F"
		android:textSize="@dimen/sp_14"
		android:gravity="center"
		android:text="排名"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<!--奖励状态-->
	<TextView
		android:id="@+id/tv_item_mine_dang_dan_jiangli_state"
		android:textColor="@color/white"
		android:textSize="@dimen/sp_10"
		android:gravity="center"
		android:text="已获得奖励"
		android:background="@drawable/bg_mine_bang_dan_state_huode"
		android:layout_toRightOf="@+id/tv_item_mine_dang_dan_paiming"
		android:layout_marginLeft="@dimen/dp_8"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<!--时间-->
	<TextView
		android:id="@+id/tv_item_mine_dang_dan_time"
		android:textColor="@color/c_B8B8B8"
		android:textSize="@dimen/sp_10"
		android:gravity="center"
		android:text=""
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/dp_5"/>

	<!--人数-->
	<TextView
		android:id="@+id/tv_item_mine_dang_dan_num"
		android:textColor="@color/c_F96A0E"
		android:textSize="@dimen/sp_12"
		android:gravity="center"
		android:text="邀请0人 >"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/dp_5"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_1"
		android:background="@color/c_D9D9D9"
		android:layout_alignParentBottom="true"
		/>


</RelativeLayout>