<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/c_F6F6F6">

	<include layout="@layout/common_header"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_42"
		android:gravity="center_vertical"
		android:background="#FFF4E1">
		<TextView
			android:id="@+id/tv_yellow_card"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_15"
			android:textColor="@color/c_494949"
			android:layout_marginLeft="@dimen/dp_15"
			android:layout_marginTop="@dimen/dp_4"
			android:text="黄卡剩余0张"/>

		<TextView
			android:id="@+id/tv_more_get_card"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_12"
			android:textColor="@color/c_F96A0E"
			android:layout_alignParentRight="true"
			android:layout_marginRight="@dimen/dp_8"
			android:padding="@dimen/dp_5"
			android:text="获取更多绿卡 >>"/>
	</RelativeLayout>

	<com.androidkun.xtablayout.XTabLayout
		android:id="@+id/xtab_mine_try"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_30"
		android:layout_marginTop="@dimen/dp_5"
		app:xTabIndicatorWidth="@dimen/dp_43"
		app:xTabTextSize="@dimen/sp_13"
		app:xTabTextColor="@color/c_494949"
		app:xTabSelectedTextColor="@color/c_F96A0E"
		app:xTabIndicatorColor="@color/c_F96A0E"
		app:xTabMode="fixed"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_1"
		android:background="@color/c_E6E6E6"/>
	<android.support.v4.view.ViewPager
		android:id="@+id/vp_mine_try"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>


</LinearLayout>