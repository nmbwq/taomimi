<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BB000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:background="@drawable/bg_myearnings_popff"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_popwindow_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:text="提示"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/c_2B2B2B"/>
        <ImageView
            android:id="@+id/iv_popwindow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@drawable/popwindow_up_grade_up_one"/>
        <TextView
            android:id="@+id/tv_popwindow_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:text="您已完成所有提示"
            android:gravity="center_horizontal"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/c_2B2B2B"/>
        <ImageView
            android:id="@+id/iv_popwindow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_marginBottom="@dimen/dp_30"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_popwindow_btn_know"/>


    </LinearLayout>

</RelativeLayout>