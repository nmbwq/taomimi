<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center">
    <!--最外层为父布局，设置为透明背景，沾满整个屏幕-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/dp_50"
        android:background="@drawable/common_dialog_bg"
        >
        <!--对话框的内容在改LinearLayout中进行布局-->



        <!--布局start-->

        <!--提示-->
        <LinearLayout
            android:id="@+id/tv_tishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical"
                android:minHeight="@dimen/dp_100"
                android:paddingTop="@dimen/dp_5"
                >
                <TextView
                    android:id="@+id/tv_dialog_tuize_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    android:text="奖励计算规则"
                    />

                <TextView
                    android:id="@+id/tv_dialog_guize_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/c_main_text"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:scrollbars="vertical"
                    android:maxLines="4"
                    android:text="此处展示高佣为卖家设置的佣金"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/c_main_text"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:scrollbars="vertical"
                    android:maxLines="4"
                    android:text="不同用户申请到的佣金不同"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/c_main_text"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:scrollbars="vertical"
                    android:maxLines="4"
                    android:text="最终以实际结算为准"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_line"
                />

            <TextView
                android:id="@+id/tv_dialog_guize_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:textColor="#0B41DD"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:text="知道了"
                />
        </LinearLayout>

        <!--布局end-->
    </LinearLayout>
</RelativeLayout>