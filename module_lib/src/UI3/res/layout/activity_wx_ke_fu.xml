<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        android:id="@+id/inc_common_header"
        layout="@layout/common_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/inc_common_header"
        android:background="@color/c_EEEEEE"/>

    <ImageView
        android:id="@+id/iv_img_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_112"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_img_top"
        />
    <LinearLayout
        android:id="@+id/ll_wx_kf_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img_top"
        android:layout_marginTop="@dimen/dp_52"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_zhongwen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="客服微信号: "
            android:textColor="@color/c_686868"
            android:textSize="@dimen/dp_12"
            />
        <TextView
            android:id="@+id/tv_wx_kf_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/c_686868"
            android:textSize="@dimen/dp_12"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/ll_wx_kf_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_below="@+id/ll_wx_kf_num"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/bg_setview_btn"
        android:text="复制去微信添加"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_wx_kf_num"
        android:background="@drawable/ic_kefu_fuzhi"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="复制去微信添加"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_17"/>-->

    <TextView
        android:id="@+id/tv_img_top_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_wx_kf_copy"
        android:text="服务时间: 周一至周六 9:00-18:00"
        android:textColor="@color/c_686868"
        android:textSize="@dimen/dp_12"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_img_top_txt"
        android:layout_marginTop="@dimen/dp_57"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_kefu_chahua"/>


</RelativeLayout>

