<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/dp_307"
        android:layout_height="@dimen/dp_326"
        android:background="@drawable/bg_myearnings_popff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popwindow_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:gravity="center"
            android:text="恭喜您"
            android:textColor="@color/c_0D2F57"
            android:textSize="@dimen/dp_19" />
        <LinearLayout
            android:id="@+id/popwindow_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popwindow_one"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_popwindow_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获得"
                android:textColor="@color/c_0D2F57"
                android:textSize="@dimen/dp_19" />
            <TextView
                android:id="@+id/tv_popwindow_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="    "
                android:textColor="@color/c_FF5500"
                android:textSize="@dimen/dp_19" />
        </LinearLayout>
        <TextView
            android:id="@+id/popwindow_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/popwindow_two"
            android:text="请在我的觅卡中查看"
            android:textSize="@dimen/dp_11"
            android:textColor="@color/c_999999"/>
        <ImageView
            android:id="@+id/iv_popwindow_tupian"
            android:layout_width="@dimen/dp_258"
            android:layout_height="@dimen/dp_141"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_below="@+id/popwindow_three"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_popwindow_know"
            android:layout_width="@dimen/dp_216"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/bg_mybigwhell_pop_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_19"
            android:text="知道了" />

    </RelativeLayout>

</RelativeLayout>