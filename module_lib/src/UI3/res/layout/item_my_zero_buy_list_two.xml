<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:le="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_158"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:layout_marginBottom="@dimen/dp_14"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_0"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_158"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_all_product_tupian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_myzerobuy_card"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_14"
                android:background="@drawable/bg_my_zero_buy_item_btn"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:gravity="center"
                android:text="1张绿卡"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_10"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toRightOf="@+id/cv_item_all">

            <TextView
                android:id="@+id/tv_item_all_product_biaoti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1" />

            <com.common.app.view.NumSeekBar
                android:id="@+id/numSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_all_product_biaoti"
                android:layout_marginTop="@dimen/dp_8" />

            <TextView
                android:id="@+id/item_mytry_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numSeekBar"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/c_BB966A"
                android:textSize="@dimen/dp_10" />

            <com.common.app.utils.CountDownTextView
                android:id="@+id/tv_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_card_name"
                android:layout_marginBottom="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_13"
                android:visibility="gone"
                android:text="倒计时"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/tv_item_canjia"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_34"
                android:layout_below="@+id/item_mytry_person"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/bg_my_zero_buy_item_botton"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="马上抢"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_17" />
        </RelativeLayout>
        </LinearLayout>
        <!--</RelativeLayout>-->

    </android.support.v7.widget.CardView>
</LinearLayout>

