<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/dp_15"
	android:paddingRight="@dimen/dp_15"
	android:layout_marginTop="@dimen/dp_10">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="@dimen/dp_5"
		app:cardElevation="@dimen/dp_0"
		app:cardPreventCornerOverlap="false">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_120">

			<android.support.v7.widget.CardView
				android:id="@+id/card_item_join_success_product"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:cardCornerRadius="@dimen/dp_5"
				app:cardElevation="@dimen/dp_0"
				android:layout_marginRight="@dimen/dp_15"
				app:cardPreventCornerOverlap="false">
				<ImageView
					android:id="@+id/iv_item_join_success_product"
					android:layout_width="@dimen/dp_120"
					android:layout_height="@dimen/dp_120"
					android:scaleType="fitXY"/>
			</android.support.v7.widget.CardView>

			<TextView
				android:id="@+id/tv_item_join_success_product_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp_3"
				android:maxLines="1"
				android:ellipsize="end"
				android:textSize="@dimen/sp_12"
				android:textColor="@color/c_2F2F2F"
				android:layout_toRightOf="@+id/card_item_join_success_product"/>

			<com.common.app.view.NumSeekBar
				android:id="@+id/numSeek_item_join_success_product"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/dp_80"
				android:layout_below="@+id/tv_item_join_success_product_name"
				android:layout_marginTop="@dimen/dp_5"
				android:layout_toRightOf="@+id/card_item_join_success_product"/>

			<!--需要多少人数-->
			<TextView
				android:id="@+id/tv_item_join_success_product_need_persion"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:ellipsize="end"
				android:textSize="@dimen/sp_12"
				android:textColor="@color/c_CFCFCF"
				android:layout_toRightOf="@+id/card_item_join_success_product"
				android:layout_below="@+id/numSeek_item_join_success_product"
				android:layout_marginTop="@dimen/dp_5"/>


			<!--仅剩多少时间-->
			<com.common.app.utils.CountDownTextView
				android:id="@+id/tv_item_join_success_product_rest_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:ellipsize="end"
				android:textSize="@dimen/sp_10"
				android:textColor="@color/c_333333"
				android:layout_marginTop="@dimen/dp_5"
				android:layout_alignBaseline="@+id/tv_item_join_success_product_reward_info"
				android:layout_toRightOf="@+id/card_item_join_success_product"/>


			<!--参与试用-->
			<TextView
				android:id="@+id/tv_item_join_success_product_reward_info"
				android:layout_width="@dimen/dp_71"
				android:layout_height="@dimen/dp_24"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:layout_marginRight="@dimen/dp_15"
				android:layout_marginBottom="@dimen/dp_5"
				android:background="@drawable/bg_btn_item_try_content"
				android:textColor="@color/white"
				android:textSize="@dimen/sp_12"
				android:text="参与试用"
				android:gravity="center"/>
		</RelativeLayout>

	</android.support.v7.widget.CardView>

</FrameLayout>