<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_20"
    >

    <com.common.app.view.SquareImageView
        android:id="@+id/iv_preshare_product_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_20"
        />

    <ImageView
        android:id="@+id/iv_preshare_channle"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_below="@+id/iv_preshare_product_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:src="@drawable/ic_tb_more"
        />

    <TextView
        android:id="@+id/stvmore_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_preshare_product_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/fl_preshare_code"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        />

    <TextView
        android:id="@+id/tv_preshare_quanhoujia_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stvmore_product"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_pre_qhj"
        android:text="券后价"
        android:textColor="#FFF13B3A"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:id="@+id/tv_preshare_quanhoujia"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stvmore_product"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_preshare_quanhoujia_hint"
        android:text="xxx"
        android:textColor="#FFF13B3A"
        android:textSize="@dimen/sp_16"

        />

    <TextView
        android:id="@+id/tv_preshare_yuanjia_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_preshare_quanhoujia_hint"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="原价 ¥ "
        android:textColor="#FF828282"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:id="@+id/tv_preshare_yuanjia"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_preshare_quanhoujia_hint"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/tv_preshare_quanhoujia_hint"
        android:text=""
        android:textColor="#FF828282"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:id="@+id/tv_preshare_quan_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_preshare_quan"
        android:layout_below="@+id/tv_preshare_yuanjia_hint"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        />

    <TextView
        android:id="@+id/tv_preshare_quan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_preshare_quan_jia"
        android:layout_below="@+id/tv_preshare_yuanjia_hint"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/tv_preshare_quan_hint"
        android:gravity="center"
        android:textColor="@color/c_main"
        android:text="xxx"
        />

    <FrameLayout
        android:id="@+id/fl_preshare_code"
        android:layout_width="@dimen/dp_115"
        android:layout_height="@dimen/dp_125"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_preshare_product_img"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_preshare_boder"
        >

        <ImageView
            android:id="@+id/iv_preshare_code"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_3"
            android:background="@color/c_main"
            />

    </FrameLayout>

</RelativeLayout>
