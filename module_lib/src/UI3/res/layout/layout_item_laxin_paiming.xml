<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingLeft="@dimen/dp_10"
	android:paddingRight="@dimen/dp_10"
	android:layout_width="match_parent"
	android:layout_height="@dimen/dp_60"
	>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_60">

		<TextView
			android:id="@+id/tv_item_laxin_paiming"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dp_5"
			android:gravity="center"
			android:textSize="@dimen/sp_12"
			android:textColor="@color/c_444444"
			android:layout_width="@dimen/dp_28"
			android:layout_height="@dimen/dp_30"/>

		<ImageView
			android:id="@+id/iv_item_laxin_paiming_photo"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/dp_10"
			android:layout_toRightOf="@+id/tv_item_laxin_paiming"
			android:textSize="@dimen/sp_12"
			android:textColor="@color/c_444444"
			android:layout_width="@dimen/dp_38"
			android:layout_height="@dimen/dp_38"/>

		<TextView
			android:id="@+id/tv_item_laxin_paiming_name"
			android:layout_marginLeft="@dimen/dp_10"
			android:textSize="@dimen/sp_12"
			android:layout_marginTop="@dimen/dp_16"
			android:layout_toRightOf="@+id/iv_item_laxin_paiming_photo"
			android:textColor="@color/c_2F2F2F"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/tv_item_laxin_paiming_phone"
			android:layout_marginLeft="@dimen/dp_10"
			android:textSize="@dimen/sp_10"
			android:layout_toRightOf="@+id/iv_item_laxin_paiming_photo"
			android:layout_below="@+id/tv_item_laxin_paiming_name"
			android:layout_marginBottom="@dimen/dp_16"
			android:textColor="@color/c_838383"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>


		<TextView
			android:id="@+id/tv_item_laxin_paiming_num"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dp_5"
			android:textSize="@dimen/sp_12"
			android:textColor="@color/c_F96A0E"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_1"
			android:background="@color/c_D9D9D9"
			android:layout_alignParentBottom="true"
		/>
	</RelativeLayout>

</FrameLayout>
