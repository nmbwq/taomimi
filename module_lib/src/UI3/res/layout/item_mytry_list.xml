<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:le="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_0"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/cv_item_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_0"
                app:cardPreventCornerOverlap="false"
                >

                    <ImageView
                        android:id="@+id/iv_item_all_product_tupian"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"
                        android:scaleType="fitXY"
                        />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/cv_item_all"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                >

                <TextView
                    android:id="@+id/tv_item_all_product_biaoti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

                <com.common.app.view.NumSeekBar
                    android:id="@+id/numSeekBar"
                    android:layout_width="@dimen/dp_115"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_below="@+id/tv_item_all_product_biaoti"
                    android:layout_marginTop="@dimen/dp_8"/>
                <TextView
                    android:id="@+id/item_mytry_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/numSeekBar"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textSize="@dimen/dp_10"
                    android:textColor="@color/c_AEAEAE"/>

                <com.common.app.utils.CountDownTextView
                    android:id="@+id/tv_card_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:layout_below="@+id/tv_card_name"
                    android:text=""
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/tv_item_canjia"
                    android:layout_width="@dimen/dp_71"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:background="@drawable/bg_mytry_item_botton"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="参与试用"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/botton_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        />
</LinearLayout>

