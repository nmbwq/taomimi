<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="bottom"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_346"
        android:background="@color/white"
        >


        <!--这个地方只有4个数据，返多了返少了都是bug，找后台-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_67"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_sign_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@drawable/bg_sign_num_selected"
                android:text="1份"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_sign_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@drawable/bg_sign_num_unselected"
                android:text="2份"
                android:textColor="@color/c_2F2F2F"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_sign_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@drawable/bg_sign_num_unselected"
                android:text="5份"
                android:textColor="@color/c_2F2F2F"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_sign_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@drawable/bg_sign_num_unselected"
                android:text="10份"
                android:textColor="@color/c_2F2F2F"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                />


        </LinearLayout>

        <View
            android:id="@+id/v_sign_dash_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@drawable/bg_sign_line"
            android:layout_marginTop="@dimen/dp_108"
            android:layerType="software"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_sign_ye"
            android:layout_marginBottom="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_25"
            android:text="选择支付方式"
            android:textColor="@color/c_2F2F2F"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_sign_ye"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_26"
            android:text="提示:1份等于1元，购买份数越多,平均分的金额越多"
            android:textColor="#979797"
            android:textSize="@dimen/sp_10"
            />

        <ImageView
            android:id="@+id/iv_sign_ye"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_above="@+id/iv_sign_zhifb"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_25"
            android:src="@drawable/ic_sign_tmm"
            />

        <TextView
            android:id="@+id/tv_iv_sign_remain_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_sign_zhifb"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_marginLeft="@dimen/sp_8"
            android:layout_toRightOf="@+id/iv_sign_ye"
            android:text="淘觅觅可用余额"
            android:textColor="@color/c_2F2F2F"
            />

        <ImageView
            android:id="@+id/iv_sign_zf_ye"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_above="@+id/iv_sign_zhifb"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_sign_selected"
            android:padding="@dimen/dp_10"
            />


        <ImageView
            android:id="@+id/iv_sign_zhifb"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_above="@+id/tv_sign_cancle"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_25"
            android:src="@drawable/ic_sign_zfb"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_sign_cancle"
            android:layout_marginBottom="@dimen/dp_28"
            android:layout_marginLeft="@dimen/sp_8"
            android:layout_toRightOf="@+id/iv_sign_zhifb"
            android:text="支付宝支付"
            android:textColor="@color/c_2F2F2F"
            />

        <ImageView
            android:id="@+id/iv_sign_zf_zfb"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_above="@+id/tv_sign_cancle"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_sign_unselected"
            android:padding="@dimen/dp_10"

            />


        <TextView
            android:id="@+id/tv_sign_cancle"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/bg_signin_pay_cancle"
            android:gravity="center"
            android:text="取消"
            android:textColor="#2F2F2F"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/tv_sign_sure"
            android:layout_width="@dimen/dp_238"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_signin_pay_ture"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            />

    </RelativeLayout>

</RelativeLayout>