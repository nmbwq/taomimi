<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">

	<include layout="@layout/common_header" />

	<View
		android:background="@color/c_D9D9D9"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_1"/>

	<android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/c_F6F6F6"
		android:fillViewport="true">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/tv_red_package_txt"
				android:textColor="@color/c_161616"
				android:textSize="@dimen/sp_15"
				android:layout_margin="@dimen/dp_15"
				android:text="红包开关"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<Switch
				android:id="@+id/switch_red_pack"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="@dimen/dp_20"
				android:checked="false"
				android:layout_alignBaseline="@+id/tv_red_package_txt"
				android:track="@drawable/notify_switch_track_selecter"
				android:thumb="@drawable/notify_switch_thumb_seleter"/>

			<android.support.v7.widget.CardView
				android:id="@+id/card_red_package_yue"
				android:layout_below="@+id/tv_red_package_txt"
				app:cardCornerRadius="@dimen/dp_5"
				app:cardElevation="@dimen/dp_0"
				android:background="@color/white"
				android:layout_marginLeft="@dimen/dp_15"
				android:layout_marginRight="@dimen/dp_15"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_250">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp_250">

					<TextView
						android:text="我的红包余额"
						android:layout_centerHorizontal="true"
						android:textSize="@dimen/sp_12"
						android:layout_marginTop="@dimen/dp_14"
						android:textColor="@color/c_2F2F2F"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>


					<TextView
						android:text="我的红包余额"
						android:layout_centerHorizontal="true"
						android:textSize="@dimen/sp_12"
						android:layout_marginTop="@dimen/dp_14"
						android:textColor="@color/c_898989"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<View
						android:layout_centerHorizontal="true"
						android:layout_marginTop="@dimen/dp_45"
						android:background="@color/c_D8D8D8"
						android:layout_width="@dimen/dp_36"
						android:layout_height="@dimen/dp_1"/>

					<TextView
						android:text="¥"
						android:layout_centerHorizontal="true"
						android:textSize="@dimen/sp_25"
						android:layout_marginTop="@dimen/dp_69"
						android:layout_toLeftOf="@+id/tv_red_package_yue"
						android:textColor="@color/c_2F2F2F"
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/tv_red_package_yue"
						android:text="0"
						android:textStyle="bold"
						android:layout_centerHorizontal="true"
						android:textSize="@dimen/sp_25"
						android:layout_marginTop="@dimen/dp_69"
						android:textColor="@color/c_2F2F2F"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/tv_red_package_chongzhi"
						android:text="充值"
						android:layout_centerHorizontal="true"
						android:gravity="center"
						android:background="@drawable/bg_red_package_btn_selecter"
						android:textSize="@dimen/sp_14"
						android:layout_marginTop="@dimen/dp_33"
						android:layout_below="@+id/tv_red_package_yue"
						android:textColor="@color/white"
						android:layout_width="@dimen/dp_160"
						android:layout_height="@dimen/dp_36"/>

					<TextView
						android:id="@+id/tv_red_package_tixian"
						android:text="转至可提现余额"
						android:layout_centerHorizontal="true"
						android:gravity="center"
						android:background="@drawable/bg_red_package_btn_unselecter"
						android:textSize="@dimen/sp_14"
						android:layout_marginTop="@dimen/dp_10"
						android:layout_below="@+id/tv_red_package_chongzhi"
						android:textColor="@color/c_222222"
						android:layout_width="@dimen/dp_160"
						android:layout_height="@dimen/dp_36"/>


				</RelativeLayout>


			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/card_red_package_set"
				android:layout_below="@+id/card_red_package_yue"
				app:cardCornerRadius="@dimen/dp_5"
				app:cardElevation="@dimen/dp_0"
				android:layout_marginTop="@dimen/dp_20"
				android:background="@color/white"
				android:layout_marginLeft="@dimen/dp_15"
				android:layout_marginRight="@dimen/dp_15"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_250">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="@dimen/dp_250">

					<TextView
						android:text="新用户领取红包设置"
						android:layout_centerHorizontal="true"
						android:textSize="@dimen/sp_12"
						android:layout_marginTop="@dimen/dp_14"
						android:textColor="@color/c_898989"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<View
						android:layout_centerHorizontal="true"
						android:layout_marginTop="@dimen/dp_45"
						android:background="@color/c_D8D8D8"
						android:layout_width="@dimen/dp_36"
						android:layout_height="@dimen/dp_1"/>

					<TextView
						android:text="¥"
						android:layout_centerHorizontal="true"
						android:textSize="@dimen/sp_25"
						android:layout_marginTop="@dimen/dp_69"
						android:layout_toLeftOf="@+id/tv_red_package_set"
						android:textColor="@color/c_2F2F2F"
						android:textStyle="bold"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/tv_red_package_set"
						android:text="0.00~0.00"
						android:layout_centerHorizontal="true"
						android:textSize="@dimen/sp_25"
						android:textStyle="bold"
						android:layout_marginTop="@dimen/dp_69"
						android:textColor="@color/c_2F2F2F"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:text="金额设置"
						android:layout_centerHorizontal="true"
						android:textSize="@dimen/sp_12"
						android:textColor="#FA9D3B"
						android:layout_below="@+id/tv_red_package_set"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/tv_red_package_suiji"
						android:text="随机红包"
						android:layout_centerHorizontal="true"
						android:gravity="center"
						android:background="@drawable/bg_red_package_btn_selecter"
						android:textSize="@dimen/sp_14"
						android:layout_marginTop="@dimen/dp_33"
						android:layout_below="@+id/tv_red_package_set"
						android:textColor="@color/white"
						android:layout_width="@dimen/dp_160"
						android:layout_height="@dimen/dp_36"/>

					<TextView
						android:id="@+id/tv_red_package_guding"
						android:text="固定红包"
						android:layout_centerHorizontal="true"
						android:gravity="center"
						android:background="@drawable/bg_red_package_btn_unselecter"
						android:textSize="@dimen/sp_14"
						android:layout_marginTop="@dimen/dp_10"
						android:layout_below="@+id/tv_red_package_suiji"
						android:textColor="@color/c_222222"
						android:layout_width="@dimen/dp_160"
						android:layout_height="@dimen/dp_36"/>


				</RelativeLayout>


			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/card_red_package_wanfa"
				android:layout_below="@+id/card_red_package_set"
				app:cardCornerRadius="@dimen/dp_5"
				app:cardElevation="@dimen/dp_0"
				android:layout_marginTop="@dimen/dp_20"
				android:background="@color/white"
				android:layout_marginLeft="@dimen/dp_15"
				android:layout_marginRight="@dimen/dp_15"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="@dimen/dp_15">

					<TextView
						android:text="新人红包玩法"
						android:textSize="@dimen/sp_17"
						android:textColor="@color/c_333333"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/tv_red_package_wanfa"
						android:orientation="vertical"
						android:layout_marginTop="@dimen/dp_10"
						android:textColor="@color/c_333333"
						android:textSize="@dimen/sp_12"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

					<TextView
						android:text="小技巧"
						android:textSize="@dimen/sp_17"
						android:layout_marginTop="@dimen/dp_14"
						android:textColor="@color/c_333333"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<TextView
						android:id="@+id/tv_red_package_jiqiao"
						android:orientation="vertical"
						android:layout_marginTop="@dimen/dp_10"
						android:textColor="@color/c_333333"
						android:textSize="@dimen/sp_12"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

				</LinearLayout>


			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_below="@+id/card_red_package_wanfa"
				app:cardCornerRadius="@dimen/dp_5"
				app:cardElevation="@dimen/dp_0"
				android:layout_marginTop="@dimen/dp_20"
				android:background="@color/white"
				android:layout_marginLeft="@dimen/dp_15"
				android:layout_marginRight="@dimen/dp_15"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="@dimen/dp_15">

					<TextView
						android:id="@+id/tv_red_package_shuoming"
						android:text="如果开启了新人红包功能，微信（未注册淘觅觅）扫码会出现下图领取红包的过程,提高新用户注册和下载淘觅觅的积极性"
						android:textSize="@dimen/sp_12"
						android:textColor="@color/c_333333"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

					<ImageView
						android:id="@+id/iv_red_package"
						android:scaleType="fitXY"
						android:layout_marginTop="@dimen/dp_15"
						android:layout_marginLeft="@dimen/dp_5"
						android:layout_marginRight="@dimen/dp_5"
						android:layout_width="match_parent"
						android:layout_height="@dimen/dp_461"/>

				</LinearLayout>


			</android.support.v7.widget.CardView>

		</RelativeLayout>

	</android.support.v4.widget.NestedScrollView>

</LinearLayout>
