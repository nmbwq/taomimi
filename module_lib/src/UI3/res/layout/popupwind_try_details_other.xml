<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/dp_249"
        android:layout_height="@dimen/dp_300"
        android:background="@drawable/bg_try_details_pop">
        <!--<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:text="您的黄卡当前为1张 确定参与试用该商品吗？"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/white"/>
        </RelativeLayout>-->
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_150"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="@dimen/dp_13"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_1"
            android:text="1张黄卡等于1个试用码"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/c_FEDA33"/>

        <LinearLayout
            android:id="@+id/ll_dianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tishi"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_21"
                android:text="兑换"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/btn_trydetails_center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/minus"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_18"
                    android:background="@drawable/btn_trydetails_left"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="@dimen/dp_13"
                    android:textColor="@color/c_D2322A"/>
                <TextView
                    android:id="@+id/num"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/dp_7"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/plus"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_18"
                    android:background="@drawable/btn_trydetails_left"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="@dimen/dp_13"
                    android:textColor="@color/c_D2322A"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="个试用码"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_jinggao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_dianji"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_7"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_jinggao"/>
            <TextView
                android:id="@+id/tv_nowtishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="黄卡数量不足"
                android:textSize="@dimen/dp_8"
                android:textColor="@color/c_FEDA33"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_27"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_13"
            android:background="@drawable/bg_btn_trydetails_one"
            android:text="取消"
            android:textColor="@color/c_FFD629"
            android:textSize="@dimen/dp_13"/>
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_27"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_13"
            android:background="@drawable/bg_btn_trydetails_two"
            android:text="确定"
            android:textColor="@color/c_D2322A"
            android:textSize="@dimen/dp_13"/>


    </RelativeLayout>

</RelativeLayout>