<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/dp_234"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/bg_myearnings_popff"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_popwindow_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center"
            android:text="确认删除该收货地址?"
            android:textColor=" #2F2F2F "
            android:textSize="@dimen/dp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_above="@+id/ll"
            android:background="@color/c_EEEEEE"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_popwindow_finish"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="取消"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/dp_13" />
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll"
                android:background="@color/c_EEEEEE"/>

            <TextView
                android:id="@+id/tv_popwindow_sure"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="删除"
                android:textColor="#FA6400"
                android:textSize="@dimen/dp_13" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>