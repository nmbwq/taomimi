<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_9"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_item_dui"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:background="@drawable/ic_record_jujue"
            />

        <TextView
            android:id="@+id/tv_record_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/iv_item_dui"
            android:text="成功"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_12"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_jine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_9"
        android:text="+￥1"
        android:textColor="@color/c_F13B3A"
        android:textSize="@dimen/dp_10"
        />


    <TextView
        android:id="@+id/tv_record_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_jine"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toLeftOf="@+id/tv_item_date"
        android:layout_toStartOf="@+id/tv_item_date"
        android:background="@drawable/bg_record_btnab"
        android:text="   复制   "
        android:textColor="@color/c_ABABAB"
        android:textSize="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_item_jine"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toRightOf="@+id/iv_item_all_product_tupian"
        android:text="创建日"
        android:textColor="@color/c_7E7E7E"
        android:textSize="@dimen/dp_10"
        />

    <LinearLayout
        android:id="@+id/ll_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_item_jine"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toLeftOf="@+id/tv_record_copy"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_item_record_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="订单号 xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_10"
            />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_item_num"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#E1E1E1"
        />


</RelativeLayout>