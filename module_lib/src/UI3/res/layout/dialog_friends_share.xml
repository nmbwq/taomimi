<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fefefe"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小提示:微信朋友圈如无法一键分享,请先“一键存图”,在手动“发朋友圈”哦~"
        android:layout_margin="@dimen/dp_10"
        android:textColor="#9b9b9b"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:id="@+id/share_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_share_app_wx"
            android:gravity="center"
            android:text="微信"
            android:textColor="#484848"
            />

        <TextView
            android:id="@+id/share_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_share_app_friends"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="#484848"
            />

        <TextView
            android:id="@+id/save_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_share_app_local"
            android:gravity="center"
            android:text="一键存图"
            android:textColor="#484848"
            />

        <TextView
            android:id="@+id/share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_share_app_qq"
            android:gravity="center"
            android:text="QQ"
            android:textColor="#484848"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/share_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_share_app_sina"
            android:gravity="center"
            android:text="新浪"
            android:textColor="#484848"
            />

        <TextView
            android:id="@+id/share_qq_kongjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_share_app_qqkj"
            android:gravity="center"
            android:text="QQ空间"
            android:textColor="#484848"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:drawableTop="@drawable/ic_share_app_local"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableTop="@drawable/ic_share_app_local"
            android:visibility="invisible"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:background="#f9f9f9"
        android:textColor="#484848"
        android:text="取消"
        />
</LinearLayout>
