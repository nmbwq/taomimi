<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/dp_60">
	
	<ImageView
		android:id="@+id/iv_item_red_package_info_photo"
		android:scaleType="fitXY"
		android:layout_marginLeft="@dimen/dp_15"
		android:layout_marginRight="@dimen/dp_10"
		android:layout_centerVertical="true"
		android:layout_width="@dimen/dp_38"
		android:layout_height="@dimen/dp_38"/>

	<TextView
		android:id="@+id/tv_item_red_package_info_name"
		android:layout_marginTop="@dimen/dp_16"
		android:layout_toRightOf="@+id/iv_item_red_package_info_photo"
		android:textSize="@dimen/sp_12"
		android:textColor="@color/c_2F2F2F"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/tv_item_red_package_info_state"
		android:layout_marginTop="@dimen/dp_16"
		android:layout_toRightOf="@+id/tv_item_red_package_info_name"
		android:textSize="@dimen/sp_10"
		android:textColor="@color/white"
		android:layout_marginLeft="@dimen/dp_15"
		android:background="@drawable/bg_red_packinfo_state_unuse"
		android:text="未使用"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/tv_item_red_package_info_phone"
		android:layout_below="@+id/tv_item_red_package_info_name"
		android:layout_toRightOf="@+id/iv_item_red_package_info_photo"
		android:textSize="@dimen/sp_10"
		android:textColor="@color/c_9C9C9C"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/tv_item_red_package_info_price"
		android:layout_marginTop="@dimen/dp_16"
		android:layout_alignParentRight="true"
		android:textSize="@dimen/sp_15"
		android:layout_marginRight="@dimen/dp_15"
		android:textColor="@color/c_FF0000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/tv_item_red_package_info_data"
		android:layout_below="@+id/tv_item_red_package_info_price"
		android:layout_alignParentRight="true"
		android:textSize="@dimen/sp_10"
		android:layout_marginRight="@dimen/dp_15"
		android:textColor="@color/c_9C9C9C"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>


	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_1"
		android:layout_marginLeft="@dimen/dp_15"
		android:layout_marginRight="@dimen/dp_15"
		android:layout_alignParentBottom="true"
		android:background="@color/c_D9D9D9" />

</RelativeLayout>