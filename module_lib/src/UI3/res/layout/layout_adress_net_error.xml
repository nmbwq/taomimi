<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_net_error"
    android:visibility="invisible"
    >

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/iv_common_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/iv_common_sou" />

        <TextView
            android:id="@+id/tv_common_click_try"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="13sp"
            android:textColor="#979797"
            android:text="你还没有收货地址哦~添加一个吧!"

            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_common_click_trys"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:text="添加收货地址"
        android:gravity="center"
        android:textColor="#6D7278"
        android:textSize="16sp"
        android:background="@drawable/color_dialog_commit_shape11"
        android:layout_marginTop="20dp"
        />


</LinearLayout>