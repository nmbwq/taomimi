<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/c_70000000"
	android:gravity="center">

	<android.support.v7.widget.CardView
		android:id="@+id/card_popu_value"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_252"
		android:layout_marginLeft="@dimen/dp_40"
		android:layout_marginRight="@dimen/dp_40"
		app:cardCornerRadius="@dimen/dp_5"
		app:cardElevation="@dimen/dp_0"
		app:cardPreventCornerOverlap="false">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/iv_week_sign_success"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp_34"
				android:layout_centerHorizontal="true"
				android:src="@drawable/ic_popu_week_signin_success"/>


			<TextView
				android:id="@+id/tv_week_sign_success1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_marginRight="@dimen/dp_50"
				android:layout_marginLeft="@dimen/dp_50"
				android:layout_centerHorizontal="true"
				android:textSize="@dimen/sp_10"
				android:textColor="@color/c_2F2F2F"
				android:layout_marginTop="@dimen/dp_40"
				android:layout_below="@+id/iv_week_sign_success"
			android:text="黑卡数量不足"/>

			<TextView
				android:id="@+id/tv_week_sign_success2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_below="@+id/tv_week_sign_success1"
				android:textSize="@dimen/sp_10"
				android:textColor="@color/c_2F2F2F"
				android:text="邀请好友即可获得黑卡一张哦~"/>

			<!--去参与-->
			<TextView
				android:id="@+id/tv_popu_week_signin_join"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:gravity="center"
				android:textSize="@dimen/sp_19"
				android:textColor="@color/white"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="@dimen/dp_28"
				android:layout_marginLeft="@dimen/dp_31"
				android:layout_marginRight="@dimen/dp_31"
				android:background="@drawable/bg_popu_week_signin_success_join"
				android:text="去邀请"/>

		</RelativeLayout>

	</android.support.v7.widget.CardView>

	<ImageView
		android:id="@+id/iv_popu_value_close"
		android:layout_marginTop="@dimen/dp_20"
		android:layout_below="@+id/card_popu_value"
		android:layout_centerHorizontal="true"
		android:src="@drawable/ic_withdrawdeposit_close"
		android:visibility="gone"
		android:layout_width="@dimen/dp_30"
		android:layout_height="@dimen/dp_30"/>


</RelativeLayout>