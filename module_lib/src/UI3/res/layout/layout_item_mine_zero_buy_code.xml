<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp_10"
		android:orientation="horizontal">
		<RelativeLayout
			android:layout_width="@dimen/dp_35"
			android:layout_height="@dimen/dp_22"
			android:layout_marginLeft="@dimen/dp_9"
			android:layout_gravity="center_vertical">
			<ImageView
				android:id="@+id/iv_ranking"
				android:layout_width="@dimen/dp_20"
				android:layout_height="@dimen/dp_22"
				android:layout_alignParentRight="true"
				android:background="@drawable/ic_zero_buy_details_one"
				android:visibility="gone"
				/>
			<TextView
				android:id="@+id/tv_ranking"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:text="01"
				android:textSize="@dimen/dp_10"
				android:textColor="@color/c_444444"/>
			<TextView
				android:id="@+id/tv_ranking_me"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:visibility="gone"
				android:text="100+"
				android:textSize="@dimen/dp_15"
				android:textColor="@color/c_FF0000"/>
		</RelativeLayout>

		<LinearLayout
			android:layout_weight="1"
			android:layout_width="0px"
			android:gravity="center_vertical"
			android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/iv_photo"
				android:layout_width="@dimen/dp_32"
				android:layout_height="@dimen/dp_32"
				android:layout_marginLeft="@dimen/dp_12"
				android:scaleType="centerInside"
				android:src="@drawable/ic_common_user_def"
				/>
			<TextView
				android:id="@+id/tv_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="范围为"
				android:layout_marginLeft="@dimen/dp_8"
				android:textSize="@dimen/dp_11"
				android:textColor="@color/c_2F2F2F"/>
			<TextView
				android:id="@+id/tv_my_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone"
				android:text="(我)"
				android:textSize="@dimen/dp_11"
				android:textColor="@color/c_FF0000"/>
			<TextView
				android:id="@+id/tv_shall_be"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dp_5"
				android:background="@drawable/bg_zero_buy_details_bide_et"
				android:text="  必得  "
				android:visibility="gone"
				android:textSize="@dimen/dp_9"
				android:textColor="@color/white"
				/>

		</LinearLayout>


		<TextView
			android:id="@+id/tv_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/dp_36"
			android:layout_gravity="center_vertical"
			android:text="11个"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginLeft="@dimen/dp_6"
		android:layout_marginRight="@dimen/dp_6"
		android:layout_marginTop="@dimen/dp_9"
		android:background="@color/c_D9D9D9"/>


	<!--<android.support.v7.widget.CardView
		android:id="@+id/card_item_try_content"
		android:layout_width="@dimen/dp_77"
		android:layout_height="@dimen/dp_67"
		app:cardCornerRadius="@dimen/dp_5"
		app:cardElevation="@dimen/dp_0"
		android:layout_gravity="center"
		app:cardPreventCornerOverlap="false">

		<TextView
			android:id="@+id/iv_item_try_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#F5F5F5"
			android:gravity="center"/>
	</android.support.v7.widget.CardView>-->


</LinearLayout>