<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/c_70000000"
	android:gravity="center">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_177"
		android:layout_marginLeft="@dimen/dp_40"
		android:layout_marginRight="@dimen/dp_40"
		app:cardCornerRadius="@dimen/dp_15"
		app:cardElevation="@dimen/dp_0"
		app:cardPreventCornerOverlap="false">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:text="随机红包设置"
				android:gravity="center"
				android:textColor="@color/c_2F2F2F"
				android:textSize="@dimen/sp_12"
				android:layout_marginTop="@dimen/dp_15"
				android:layout_centerHorizontal="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:id="@+id/tv_popu_red_package_suiji"
				android:text="~"
				android:gravity="center"
				android:textColor="@color/c_2F2F2F"
				android:textSize="@dimen/sp_16"
				android:layout_marginTop="@dimen/dp_59"
				android:layout_centerHorizontal="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<EditText
				android:id="@+id/et_popu_red_package_suiji_start_value"
				android:background="@drawable/bg_popu_red_package_et"
				android:hint="输入金额"
				android:textSize="@dimen/sp_12"
				android:gravity="center"
				android:layout_marginRight="@dimen/dp_20"
				android:layout_toLeftOf="@+id/tv_popu_red_package_suiji"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="@dimen/dp_53"
				android:textColorHint="@color/c_CFCFCF"
				android:layout_width="@dimen/dp_96"
				android:layout_height="@dimen/dp_36"/>

			<EditText
				android:id="@+id/et_popu_red_package_suiji_end_value"
				android:background="@drawable/bg_popu_red_package_et"
				android:hint="输入金额"
				android:textSize="@dimen/sp_12"
				android:gravity="center"
				android:layout_marginLeft="@dimen/dp_20"
				android:layout_toRightOf="@+id/tv_popu_red_package_suiji"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="@dimen/dp_53"
				android:textColorHint="@color/c_CFCFCF"
				android:layout_width="@dimen/dp_96"
				android:layout_height="@dimen/dp_36"/>

			<TextView
				android:text="红包金额设置 0.01元~100元"
				android:gravity="center"
				android:textColor="#AAAAAA"
				android:textSize="@dimen/sp_9"
				android:layout_marginTop="@dimen/dp_18"
				android:layout_below="@+id/tv_popu_red_package_suiji"
				android:layout_centerHorizontal="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<View
				android:background="@color/c_D9D9D9"
				android:layout_above="@+id/ll_popu_red_package"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_1" />

			<LinearLayout
				android:id="@+id/ll_popu_red_package"
				android:layout_alignParentBottom="true"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_42">

				<TextView
					android:id="@+id/tv_popu_red_package_cancle"
					android:text="取消"
					android:gravity="center"
					android:textSize="@dimen/sp_16"
					android:textColor="@color/c_2F2F2F"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
				/>

				<View
					android:layout_width="@dimen/dp_1"
					android:layout_height="match_parent"
					android:background="@color/c_D9D9D9" />


				<TextView
					android:id="@+id/tv_popu_red_package_sure"
					android:text="确定"
					android:gravity="center"
					android:textSize="@dimen/sp_16"
					android:textColor="#07C160"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
				/>

			</LinearLayout>

		</RelativeLayout>

	</android.support.v7.widget.CardView>


</RelativeLayout>