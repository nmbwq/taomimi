<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/c_70000000"
	android:gravity="center">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_134"
		android:layout_marginLeft="@dimen/dp_40"
		android:layout_marginRight="@dimen/dp_40"
		app:cardCornerRadius="@dimen/dp_15"
		app:cardElevation="@dimen/dp_0"
		app:cardPreventCornerOverlap="false">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:text="红包余额不足，请先充值再操作"
				android:gravity="center"
				android:textColor="@color/c_2F2F2F"
				android:textSize="@dimen/sp_15"
				android:layout_marginTop="@dimen/dp_37"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>


			<View
				android:background="@color/c_D9D9D9"
				android:layout_above="@+id/tv_popu_red_package_sure"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_1" />

			<TextView
				android:id="@+id/tv_popu_red_package_sure"
				android:text="确定"
				android:gravity="center"
				android:textSize="@dimen/sp_16"
				android:textColor="@color/c_2F2F2F"
				android:layout_alignParentBottom="true"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dp_42"/>

		</RelativeLayout>

	</android.support.v7.widget.CardView>


</RelativeLayout>