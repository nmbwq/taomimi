<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_9"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62">

        <ImageView
            android:id="@+id/iv_item_all_product_tupian"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_8" />

        <TextView
            android:id="@+id/tv_item_fans_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item_all_product_tupian"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:maxLines="1"
            android:text="标题"
            android:textColor="@color/c_2F2F2F"
            android:textSize="@dimen/dp_14" />

        <ImageView
            android:id="@+id/iv_jiantou1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/img_tmall_youjiantou"/>
        <ImageView
            android:id="@+id/iv_jiantou2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/img_tmall_xiajiantou"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:visibility="gone"
        android:layout_below="@+id/rl_all">
        <ImageView
            android:id="@+id/iv_photo_one"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_56"
            android:layout_centerVertical="true"
            android:background="@drawable/iv_tmallsupermarket_tianmaochaoshi"/>

        <TextView
            android:id="@+id/tv_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_photo_one"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_centerVertical="true"
            android:text="我是测试" />
        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/img_set_youjiantou" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:visibility="gone"
        android:layout_below="@+id/ll_meituan">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_45"
            android:background="@color/c_D9D9D9"/>

        <ImageView
            android:id="@+id/iv_photo_two"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_56"
            android:layout_centerVertical="true"
            android:background="@drawable/iv_tmallsupermarket_tianmaochaoshi"/>

        <TextView
            android:id="@+id/tv_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_photo_two"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_centerVertical="true"
            android:text="我是测试" />
        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/img_set_youjiantou" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:visibility="gone"
        android:layout_below="@+id/ll_meituan">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_45"
            android:background="@color/c_D9D9D9"/>

        <ImageView
            android:id="@+id/iv_photo_three"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_56"
            android:layout_centerVertical="true"
            android:background="@drawable/iv_tmallsupermarket_tianmaochaoshi"/>

        <TextView
            android:id="@+id/tv_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_photo_three"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_centerVertical="true"
            android:text="我是测试" />
        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/img_set_youjiantou" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:visibility="gone"
        android:layout_below="@+id/ll_meituan">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_45"
            android:background="@color/c_D9D9D9"/>

        <ImageView
            android:id="@+id/iv_photo_four"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_56"
            android:layout_centerVertical="true"
            android:background="@drawable/iv_tmallsupermarket_tianmaochaoshi"/>

        <TextView
            android:id="@+id/tv_title_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_photo_four"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_centerVertical="true"
            android:text="我是测试" />
        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/img_set_youjiantou" />
    </RelativeLayout>
</LinearLayout>

