<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="java.com.lechuang.module.fensi.FenSiActivity"
    >

    <include layout="@layout/status_view"/>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_10"
        >
        <!--返回按钮-->
        <ImageView
            android:id="@+id/iv_common_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_common_back"
            />

        <!--标题-->
        <TextView
            android:id="@+id/iv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textColor="@color/c_main_text"
            android:textSize="@dimen/sp_16"
            />

        <!--右面文字占位-->
        <TextView
            android:id="@+id/tv_common_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/ic_fensi_all"
            android:text="全部"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            />
    </RelativeLayout>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_title"
        android:background="@color/c_D9D9D9"/>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xTablayout_fensi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/v_line"
        app:xTabIndicatorColor="@color/c_main"
        app:xTabIndicatorHeight="@dimen/dp_2"
        app:xTabIndicatorWidth="@dimen/dp_15"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="@color/c_main"
        app:xTabSelectedTextSize="@dimen/sp_16"
        app:xTabTextColor="@color/c_main_text"
        app:xTabTextSize="@dimen/sp_16"
        android:background="@color/c_F6F6F6"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fensi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xTablayout_fensi"
        />
