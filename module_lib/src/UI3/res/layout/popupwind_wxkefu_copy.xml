<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_popwindow_wxkefu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_popwindow_wxkefu_kuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wxkefu_popff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_popwindow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_kefu_popwindow"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_popwindow_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_below="@+id/tv_popwindow_title"
            android:layout_centerHorizontal="true"
            android:text="微信号已复制"
            android:textColor="@color/c_181818"
            android:textSize="@dimen/dp_20" />
        <TextView
            android:id="@+id/tv_popwindow_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_popwindow_content1"
            android:layout_centerHorizontal="true"
            android:text="我们将会全心全意为您提供满意周到的"
            android:textColor="@color/c_9F9F9F"
            android:textSize="@dimen/dp_14" />
        <TextView
            android:id="@+id/tv_popwindow_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_popwindow_content2"
            android:layout_centerHorizontal="true"
            android:text="咨询服务, 也希望您能支持监督我们的"
            android:textColor="@color/c_9F9F9F"
            android:textSize="@dimen/dp_14" />
        <TextView
            android:id="@+id/tv_popwindow_content4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_popwindow_content3"
            android:layout_centerHorizontal="true"
            android:text="服务！                            "
            android:textColor="@color/c_9F9F9F"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_popwindow_know"
            android:layout_width="@dimen/dp_230"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_31"
            android:layout_marginBottom="@dimen/dp_13"
            android:gravity="center"
            android:layout_below="@+id/tv_popwindow_content4"
            android:background="@drawable/bg_setview_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_5"
            android:text="去微信加好友" />

    </RelativeLayout>

</RelativeLayout>