<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="#AA000000">

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_shareweixin"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/ic_weixin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="微信好友"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sharepengyou"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/ic_weixinquan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="微信朋友圈"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sharehaoyou"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/ic_qq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="QQ好友"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_qqkong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_other">

        <LinearLayout
            android:id="@+id/ll_sharekongjian"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/ic_qqkongjian"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="QQ空间"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/ll_qqkong"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_mycard_x"
        />

</RelativeLayout>