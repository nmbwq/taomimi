<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/dp_13"
	android:orientation="vertical"
	android:paddingLeft="@dimen/dp_15"
	android:paddingRight="@dimen/dp_15">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="@dimen/dp_5"
		app:cardElevation="@dimen/dp_0"
		app:cardPreventCornerOverlap="false">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical">

			<ImageView
				android:layout_width="@dimen/dp_56"
				android:layout_height="@dimen/dp_56"
				android:layout_centerInParent="true"
				android:layout_marginBottom="@dimen/dp_16"
				android:layout_marginTop="@dimen/dp_19"
				android:src="@drawable/ic_join_success"
				android:layout_above="@+id/tv_item_join_success_trycode_state_num"/>

			<TextView
				android:text="恭喜您获得0个试用码"
				android:id="@+id/tv_item_join_success_trycode_state_num"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textColor="@color/c_2F2F2F"
				android:textSize="@dimen/sp_17"
				android:layout_marginBottom="@dimen/dp_16"
				android:layout_above="@+id/ll_item_join_success_trycode_state"/>
			<LinearLayout
				android:id="@+id/ll_item_join_success_trycode_state"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="@dimen/dp_19"/>

			<TextView
				android:id="@+id/tv_item_join_success_more_trycode"
				android:text="查看更多 >"
				android:textColor="#828282"
				android:textSize="@dimen/sp_13"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/dp_10"
				android:paddingRight="@dimen/dp_10"
				android:paddingBottom="@dimen/dp_10"
				android:layout_marginBottom="@dimen/dp_3"
				android:visibility="gone"/>


		</LinearLayout>

	</android.support.v7.widget.CardView>

	<TextView
		android:id="@+id/tv_item_join_successt_more_card"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_42"
		android:textSize="@dimen/sp_16"
		android:textColor="@color/white"
		android:text="立即获取更多黄卡"
		android:gravity="center"
		android:layout_marginTop="@dimen/dp_15"
		android:layout_marginLeft="@dimen/dp_5"
		android:layout_marginRight="@dimen/dp_5"
		android:background="@drawable/bg_item_join_success_more_card"/>

	<TextView
		android:id="@+id/tv_item_join_successt_current_trycode"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/dp_10"
		android:textSize="@dimen/sp_13"
		android:textColor="#828282"
		android:text="当前拥有试用码0个>"
		android:layout_gravity="center"/>

</LinearLayout>