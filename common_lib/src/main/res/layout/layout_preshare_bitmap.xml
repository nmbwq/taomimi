<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent_layout_preshare"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_preshare_channle"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/ic_preshare_tb"
            />

        <TextView
            android:id="@+id/tv_preshare_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/dp_17"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="bottom"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券后价"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_13"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_16"
                    />

                <TextView
                    android:id="@+id/tv_preshare_quanhoujia"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:gravity="left|bottom"
                    android:text=""
                    android:textColor="#E23620"
                    android:textSize="@dimen/dp_27"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_preshare_yuanjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_80"
                android:text="111111111111"
                android:textColor="#959595"
                android:textSize="@dimen/dp_13"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_37"
            android:layout_gravity="center"
            android:background="@drawable/bg_preshare_num1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_preshare_youhuiquan"
                android:layout_width="0px"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="xxx"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_22"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center|right"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_11"
                />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_37"
            android:layout_gravity="center"
            android:src="@drawable/ic_preshare_youhuijuan"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        >

        <com.common.app.view.SquareImageView
            android:id="@+id/tv_preshare_product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_270"
            android:background="@drawable/bg_fenxiang_jine"
            >

            <!--<LinearLayout
                android:layout_width="@dimen/dp_97"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">-->

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16"
                    />-->

                <TextView
                    android:id="@+id/tv_dibujiage"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="xxx"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_25"
                    />
            <!--</LinearLayout>-->

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_119"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/ic_preshare_img"
        >

        <TextView
            android:id="@+id/tv_preshare_wenan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="7"
            android:textColor="#FF4D14"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_preshare_code"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/c_main"
            />

    </FrameLayout>

</LinearLayout>
