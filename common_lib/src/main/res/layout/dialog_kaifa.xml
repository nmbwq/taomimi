<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center">
    <!--最外层为父布局，设置为透明背景，沾满整个屏幕-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/dp_50"
        android:background="@drawable/common_dialog_bg"
        >
        <!--对话框的内容在改LinearLayout中进行布局-->



        <!--布局start-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_dialog_kaifa"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_main_text"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="程序员正在开发中"
                />
            <TextView
                android:id="@+id/btn_dialog_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:background="@drawable/bg_dialog_btn"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="知道了"
                />

        </LinearLayout>

        <!--布局end-->
    </LinearLayout>
</RelativeLayout>
